
<WTabNav 
  @tabs={{tabs}}
  @activeTab={{activeTab}}
  @onTabChange={{action "changeTab"}}
  >
  <WAsync @task={{activeTab.task}} @autoFire={{true}} as |result|>
    {{component activeTab.component runAttempt=runAttempt payload=result options=activeTab.options class="border-bottom-list my-5"}}
  </WAsync>
</WTabNav>


{{#if pagination}}
  <WPagination
    @pages={{pagination.totalPages}}
    @count={{pagination.count}}
    @size={{limit}}
    @current={{pagination.currentPage}}
    @onchange={{action "paginate"}}
  />
{{/if}}
